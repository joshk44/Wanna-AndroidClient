<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.wanna.client.ui.CustomDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|center_vertical"
        android:padding="10dp"
        android:text="@string/oh_snap"
        android:textColor="@color/primary_text"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:src="@drawable/general_error" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/general_error"
            android:textColor="@color/secondary_text"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:background="@drawable/button_baseline"
                android:textColor="@color/primary" />

            <Button
                android:id="@+id/ok_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_baseline"
                android:text="OK"
                android:textColor="@color/primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
