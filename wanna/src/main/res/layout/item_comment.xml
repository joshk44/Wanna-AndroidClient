<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:id="@+id/commentRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        >


        <com.wanna.client.ui.custom.ProfilePictureView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:id="@+id/profile_picture_comment"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    </com.wanna.client.ui.custom.ProfilePictureView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="13s"
            android:padding="3dp"
            android:id="@+id/txtTimeComment"
            android:gravity="top"
            android:textColor="@color/font_gray"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="text a text atext atext atex "
            android:fontFamily="sans-serif-light"
            android:textColor="#F7952C"
            android:id="@+id/txtcomentid"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtTimeComment"
            android:layout_toRightOf="@+id/profile_picture_comment"
            android:layout_toEndOf="@+id/profile_picture_comment" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/font_gray" />

</LinearLayout>
